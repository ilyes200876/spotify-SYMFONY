{% extends 'base.html.twig' %}

{% block title %}Music{% endblock %}

{% block body %}
    <h1>Music</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ music.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ music.name }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ music.releaseDate ? music.releaseDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            {% set i = 1 %}
            {% for artist in music.artists %}
                <tr>
                    <th>Artist nÂ°{{ i }}</th>
                    <td><a href="{{ path('app_artist_show', {
                        'id': artist.id
                    }) }}">{{ artist }}</a></td>
                    {% set i = i + 1 %}
                </tr>
            {% endfor %}
        </tbody>
    </table>

    
    <a href="{{ path('app_music_index') }}">back to list</a>
    
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_music_edit', {'id': music.id}) }}">edit</a>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
    {{ include('music/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
